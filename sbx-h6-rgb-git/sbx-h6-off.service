[Unit]
Description=TurnSoundBlasterX-H6 LED OFF at Shutdown Service
DefaultDependencies=no
Before=halt.target shutdown.target reboot.target

[Service]
Type=oneshot
ExecStart=/usr/bin/sbx-h6-ctl -c "ff0000" -b 0 041e:3255
RemainAfterExit=yes

[Install]
WantedBy=halt.target shutdown.target reboot.target
